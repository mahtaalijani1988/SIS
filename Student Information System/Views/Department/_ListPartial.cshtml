
@using DbModel.DomainClasses.Enums
@using PagedList
@using PagedList.Mvc
@using DbModel.ViewModel.Groups
@model GroupsListVM
@Html.AntiForgeryToken()
<table class="table table-striped" id="GroupsTable">
    <thead>
        <tr>
            <th>Name</th>
            <th>Manager</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var advs in Model.GroupsList)
        {
            <tr>
                <td><span class="label label-important">@advs.Name</span></td>
                <td><span class="label label-important">@advs.Manager</span></td>
                <td>
                    <div class="btn-group pull-right">
                        <button data-toggle="dropdown" class="btn dropdown-toggle">
                            <i class="icon-cog"></i>
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="~/Department/Edit/@advs.Id"><i class="icon-file"></i> Edit</a></li>
                            <li class="divider"></li>
                            <li><a href="#" id="row-@advs.Id"><i class="icon-trash"></i> Delete</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="widget-content">
    <div class="widget-box">
        @using (Ajax.BeginForm("List", "Department", null, new AjaxOptions
        {
            HttpMethod = "POST",
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "DepartmentList"
        }, new { @class = "well form-inline", id = "DepartmentFilterForm" }))
        {
            @Html.Hidden("term", Model.Term)
            @*@Html.Hidden("courseSearchBy", ViewBag.courseSearchBy as string)*@
            @*@Html.DropDownList("courseOrderBy", ViewBag.courseOrderByList as IEnumerable<SelectListItem>, new { @class = "form-control" })*@
            @Html.DropDownList("order", ViewBag.OrderList as IEnumerable<SelectListItem>, new { @class = "form-control" })
            @Html.DropDownList("count", ViewBag.CountList as IEnumerable<SelectListItem>, new { @class = "form-control" })

            <button class="btn">
                <i class="icon-key bigger-110"></i>
                Sort By
            </button>
        }
    </div>
</div>
@Html.PagedListPager(new StaticPagedList<GroupsViewModel>(Model.GroupsList, Model.PageNumber,
    Model.PageCount, Model.TotalGroups),
    pageNumber => Url.Action("List", "Department", new
    {
        term = Model.Term,
        page = pageNumber,
        count = Model.PageCount,
        order = Model.Order,
        objSearchBy = Model.GroupsSearchBy,
    }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(PagedListRenderOptions.ClassicPlusFirstAndLast,
                new AjaxOptions
                {
                    AllowCache = false,
                    HttpMethod = "GET",
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "DepartmentList"
                }
))
<script>
    Public.Routin();
</script>

